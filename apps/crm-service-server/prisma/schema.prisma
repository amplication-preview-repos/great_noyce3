datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invoice {
  createdAt     DateTime      @default(now())
  customer      Customer?     @relation(fields: [customerId], references: [id])
  customerId    String?
  date          DateTime?
  id            String        @id @default(cuid())
  invoiceItems  InvoiceItem[]
  invoiceNumber String?
  totalAmount   Float?
  updatedAt     DateTime      @updatedAt
}

model Customer {
  address   String?
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  invoices  Invoice[]
  name      String?
  phone     String?
  updatedAt DateTime  @updatedAt
}

model Product {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  invoiceItems InvoiceItem[]
  name         String?
  price        Float?
  updatedAt    DateTime      @updatedAt
}

model InvoiceItem {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])
  invoiceId String?
  price     Float?
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  quantity  Int?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
